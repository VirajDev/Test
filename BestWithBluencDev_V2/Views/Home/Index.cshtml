    @section Scripts {

        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.0/jquery.cookie.min.js">
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                if ($.cookie('pop') == null) {
                    $('#welcomeMedicare').modal('show');
                    $.cookie('pop', '7');
                }
                else {
                    $("#welcomeMedicare").modal('hide');
                }
                
            });

            $('#redirectConfirmModel').on('show.bs.modal', function (e) {
                var targetUrl = $(e.relatedTarget).data('target-url');
                $(e.currentTarget).find('button[name="targetUrl"]').val(targetUrl);

                $(e.currentTarget).find('button[name="targetUrl"]').click(function () {
                    javascript: window.location = targetUrl;
                });

            });
        </script>


    }
